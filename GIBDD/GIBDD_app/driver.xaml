<Page x:Class="GIBDD_app.driver"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GIBDD_app"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="driver">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="59*"/>
            <RowDefinition Height="16*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="DGridDriver">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Серия и номер пасспорта" Binding="{Binding Name}" Width="*"> </DataGridTextColumn>
                <DataGridTextColumn Header="Почтовый индекс" Binding="{Binding CountOfstars}" Width="150"></DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>
        
    </Grid>
</Page>
